<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.hammollc.hammonasset.LicenseActivity">

    <RelativeLayout
        android:id="@+id/mView"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <EditText
            android:id="@+id/mExpiration"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="date"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="20dp"
            android:paddingStart="5dp"
            android:textSize="16sp"
            android:layout_alignParentTop="true"
            android:hint="Expiration Date (mm/dd/yyyy)"/>

        <Button
            android:id="@+id/mUploadBtn"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_alignParentStart="true"
            android:background="@color/colorPrimary"
            android:textColor="#fff"
            android:text="Upload Image"
            android:layout_below="@id/mExpiration"
            android:layout_margin="20dp"/>

        <Button
            android:id="@+id/mSubmitBtn"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:layout_margin="20dp"
            android:background="@color/colorPrimary"
            android:textColor="#fff"
            android:text="Submit"/>

        <ImageView
            android:id="@+id/mImage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/mUploadBtn"
            android:layout_above="@id/mSubmitBtn"
            android:layout_margin="30dp"
            android:background="@drawable/box"/>
    </RelativeLayout>

    <ProgressBar
        android:id="@+id/mProgress"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_centerInParent="true"
        android:visibility="gone"/>
</RelativeLayout>
